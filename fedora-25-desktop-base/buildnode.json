{
  "variables": {
    "pwd": "{{ env `PWD` }}",
    "compression_level": "9",
    "headless": "false",
    "description": "Fedora 25 desktop base image",
    "version": "0.0.1"
  },

  "builders": [
    {
      "type": "virtualbox-ovf",
      "source_path": "file://{{user `pwd`}}/fedora-25-server-base/output/fedora-25-serverbase-x86_64.ova",
      "output_directory": "output",
      "vm_name": "fedora-25-desktop-base-x86_64",
      "headless": "{{user `headless`}}",
      "boot_wait": "5s",
      "ssh_username": "builduser",
      "ssh_password": "thepasswordgoeshere",
      "shutdown_command": "sudo systemctl poweroff",
      "format": "ova",
      "export_opts":
      [
        "--vsys", "0",
        "--manifest",
        "--description", "{{user `description`}}",
        "--version", "{{user `version`}}"
      ]
    }
  ],

  "provisioners": [
    {
        "type": "shell",
        "scripts": [
          "scripts/gui.sh"
        ]
      }, {
      "type": "shell",
      "scripts": [
        "../common/scripts/cleanup.sh",
        "../common/scripts/minimize.sh"
      ]
    }
  ]
}
