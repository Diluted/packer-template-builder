{
  "variables": {
    "pwd": "{{ env `PWD` }}",
    "compression_level": "9",
    "headless": "true",
    "description": "Fedora desktop customized image",
    "version": "0.0.1"
  },

  "builders": [
    {
      "type": "virtualbox-ovf",
      "source_path": "../fedora-desktop-base/output/fedora-desktop-base-x86_64.ova",
      "output_directory": "output",
      "vm_name": "fedora-desktop-customized-x86_64",
      "headless": "{{user `headless`}}",
      "boot_wait": "5s",
      "ssh_username": "builduser",
      "ssh_password": "thepasswordgoeshere",
      "shutdown_command": "sudo systemctl poweroff",
      "format": "ova",
      "export_opts":
      [
        "--vsys", "0",
        "--manifest",
        "--description", "{{user `description`}}",
        "--version", "{{user `version`}}"
      ]
    }
  ],

  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "ansible/playbook.yml"
    }, {
      "type": "shell",
      "scripts": [
        "../common/scripts/cleanup.sh",
        "../common/scripts/minimize.sh"
      ]
    }
  ]
}
