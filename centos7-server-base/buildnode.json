{
  "variables": {
    "compression_level": "9",
    "cpus": "2",
    "memory": "2048",
    "disk_size": "40000",
    "headless": "false",
    "ssh_timeout": "30m",
    "description": "CentOS7 server image",
    "version": "0.0.1"
  },

  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "RedHat_64",
      "iso_url": "http://centos7-repomirror.lan/iso/CentOS-7-x86_64-Minimal-1810.iso",
      "iso_checksum": "38d5d51d9d100fd73df031ffd6bd8b1297ce24660dc8c13a3b8b4534a4bd291c",
      "iso_checksum_type": "sha256",
      "output_directory": "output",
      "vm_name": "centos7-server-base-x86_64",
      "disk_size": "{{user `disk_size`}}",
      "headless": "{{user `headless`}}",
      "http_directory": "http",
      "boot_wait": "5s",
      "boot_command": [
        "<tab> ",
        "inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/centos7-buildnode-ks.cfg ",
        "<enter>"
      ],
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "builduser",
      "ssh_password": "thepasswordgoeshere",
      "shutdown_command": "sudo systemctl poweroff",
      "format": "ova",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
      ],
      "export_opts":
      [
        "--vsys", "0",
        "--manifest",
        "--description", "{{user `description`}}",
        "--version", "{{user `version`}}"
      ]
    }
  ],

  "provisioners": [{
    "type": "shell",
    "scripts": [
      "scripts/sshd.sh",
      "scripts/extra-packages.sh"
    ]
  }]
}
